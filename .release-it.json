{
  "git": {
    "commitMessage": "Release ${version}",
    "tagAnnotation": "Release ${version}",
    "push": true,
    "pushRepo": "origin"
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "autoGenerate": true,
    "tokenRef": "GH_TOKEN"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "after:bump": "npm run changelog && git add CHANGELOG.md"
  }
}
